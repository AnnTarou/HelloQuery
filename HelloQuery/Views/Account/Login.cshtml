@model LoginViewModel
@{
    ViewData["Title"] = "ログイン";
}

<h2 class="text-center">ログイン</h2>

<!--新規登録成功時のメッセージ-->
@if (TempData["SuccessMessage"] != null)
{
    <div class="popup-message">
        @TempData["SuccessMessage"]
    </div>
}

<hr />
<form method="post">
    <div class="text-center">
        <!--ログインできない場合のエラーメッセージ表示-->
		<b><div asp-validation-summary="ModelOnly" class="text-d"></div></b>

        <!--メールアドレス入力フォーム-->
        <div class="form-group">
            <label asp-for="Email">メールアドレス</label>
            <p><input type="email" class="text-center" name="Email" required /></p>
        </div>

        <br />

        <!--パスワード入力フォーム-->
        <div class="form-group">
            <label asp-for="Password">パスワード</label>
            <p><input type="password" class="text-center" name="Password" required /></p>
        </div>

        <!--ログイン状態を保持するボタン-->
        <div class="form-group form-check">
            <input type="checkbox" class="text-center" name="RememberMe" value="true" />
            <label class="form-check-label" for="RememberMe">ログイン状態を保持する</label>
        </div>

        <br />
        <br />

        <button type="submit" asp-action="Login" asp-controller="Account" class="btn btn--cubic">ログイン</button>
    </div>
</form>

<br />

<div class="text-center">
    <a href="@Url.Action("Index", "Home")" class="btn btn--cubic">ホームに戻る</a>
</div>

<br />

<!-- パスワードを忘れた方はこちらボタン -->
<div class="text">
    <a href="@Url.Action("ForgotPassword", "Account")">パスワードを忘れた方はこちら</a>
</div>

<style>
    .btn {
        width: 13rem;
        height: 2.5rem;
    }

    /*パスワードを忘れた方…*/
    .text {
        color: white;
        position: absolute;
        bottom: 70px;
        text-decoration: none;
    }

    .form-check-label {
        font-size: 17px;
    }

    .text-d{
        display: flex;
        justify-content: center;
        font-size: 20px;
        color: salmon;
        font-weight:bold;
        font-family: monospace;
    }

    /*アカウント登録成功時のポップアップ*/
    .popup-message {
        animation: fadeOut 4s forwards;
        position: fixed;
        top: 30px;
        left: 50%;
        transform: translate(-50%, -50%);
        padding: 20px;
        background-color: #fafad2;
        color: #000033;
        border: 1px solid #fafad2;
        border-radius: .25rem;
        font-weight:bold;
        font-size:22px;
    }

    /*フェードアウトの設定*/
    @@keyframes fadeOut {
        from {
            opacity: 1;
        }

        to {
            opacity: 0;
        }
    }
</style>