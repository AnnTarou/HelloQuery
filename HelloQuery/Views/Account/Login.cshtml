@model LoginViewModel
@{
    ViewData["Title"] = "ログイン";
}

<h2>ログイン</h2>

<hr />
<form method="post">
    <!--ログインできない場合のエラーメッセージ表示-->
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!--メールアドレス入力フォーム-->
    <div class="form-group">
        <label asp-for="Email">メールアドレス</label>
        <input type="email" class="form-control" name="Email" required />
    </div>

    <br />

    <!--パスワード入力フォーム-->
    <div class="form-group">
        <label asp-for="Password">パスワード</label>
        <input type="password" class="form-control" name="Password" required />
    </div>

    <!--ログイン状態を保持するボタン-->
    <div class="form-group form-check">
        <input type="checkbox" class="form-check-input" name="RememberMe" value="true" />
        <label class="form-check-label" for="RememberMe">ログイン状態を保持する</label>
    </div>

    <br />

    <button class="btn-gradient-flat" href="">ログイン</button>
</form>

<br />

<div class="text-center">
    <a href="https://localhost:7208/">ホームに戻る</a>
</div>

