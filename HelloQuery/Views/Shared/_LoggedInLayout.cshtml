<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HelloQuery</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/HelloQuery.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">HelloQuery</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Users" asp-action="Details">アカウント</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="UserLessons" asp-action="Index">苦手リスト一覧</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Lessons" asp-action="Practice">ランダム練習問題</a>
                        </li>
                        <li class="nav-item logout">
                            <form asp-controller="Account" asp-action="Logout" method="post">
                                <button type="submit" class="nav-link text-white btn--orange">ログアウト</button>
                            </form>
                        </li>
					</ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="foot">
            &copy; 2024 - HelloQuery - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

<style>
    header {
        top:0;
        z-index:999;
    }
    body{
        background-color: #1f1a4d;
        color:white;
        font-family: 'Times New Roman',serif;
    }

    .nav-item{
        float:right;
        font-size:15px;
        padding:0 0 0 60px;
    }

    /*ログアウトボタン*/
    .logout{
        position:sticky;
		left: calc(100% - 50px);
    }

    .btn--orange {
        background-color: #1f1a4d;
        border: #1f1a4d;
    }

    .btn--orange:hover{
        background-color: #675e85;
    }

    .nav-link {
        font-size: 20px;
    }

    a{
        color:white;
        text-decoration:none;
    }

    /*ボタン*/
    .btn {
        width: 16rem;
        height: 2.7rem;
        color: white;
        background-color: #AA0000;
    }

    .btn:hover {
        color: #AA0000;
        background: white;
    }

    footer {
        background-color: black;
        position:fixed;
        width: 100%;
        bottom: 0;
        height:35px;
    }

    .foot{
        line-height:3.0;
    }

</style>
