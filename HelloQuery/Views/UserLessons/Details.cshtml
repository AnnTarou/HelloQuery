@model HelloQuery.Models.UserLesson

@{
    Layout = "_LoggedInLayout";
    ViewData["Title"] = "詳細";
}

<h1>― @Model.Lesson.Title ―</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
			<span>概要</span>
        <dd class = "col-sm-10">
            @Html.Raw(Model.Lesson.Description)
        </dd>
        <hr />
        <dt class = "col-sm-2">
			<span>問題</span>
        </dt>
        <dd class = "col-sm-10">
            @Html.Raw(Model.Lesson.Question)
        </dd>
        <hr />
        <dt class = "col-sm-2">
			<span>解答</span>
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Lesson.Answer)
        </dd>
        <hr />
        <dt class="col-sm-2">
			<span>解説</span>
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(Model.Lesson.Reference)
        </dd>
        <hr />
    </dl>
</div>
<div class="text-center">
    <p><a asp-action="Index" asp-controller="Lessons" asp-route-id="@Model.LessonId" class="btn btn--cubic">レッスンに戻る</a></p>
	<p><a asp-action="Index" class="btn btn--cubic">苦手リスト一覧に戻る</a></p>
</div>

<style>
    .col-sm-2{
        font-size:22px;
        text-align:center;
        color:white;
    }

    .col-sm-10{
        font-size:19px;
    }

    .btn{
        font-size:21px;
    }

    .col-sm-2 span {
        background: linear-gradient(transparent 50%, #663300 50%);
        padding: 0 0.1em;
    }

    h1{
        display: inline-block;
        transform: skewX(-15deg);
    }
</style>