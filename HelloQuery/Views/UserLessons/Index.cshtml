@model IEnumerable<HelloQuery.Models.UserLesson>
@{
    Layout = "_LoggedInLayout";
    ViewData["Title"] = "Index";
}

<div class="text-center">
    <h1>苦手問題一覧</h1>
</div>

<hr />

<!--苦手リストがない場合-->
@if (Model.Count() <= 0)
{
    <h4>苦手リストはありません。この調子で頑張りましょう！</h4>
}
else
{
    <!--苦手リストがある場合の苦手一覧リスト-->
    <ul>
        @foreach (var item in Model)
        {
            <li>
                <a asp-action="Index" asp-controller="Lessons" asp-route-id="@item.LessonId">@item.Lesson.Title</a>
                <a asp-action="Details" asp-route-id="@item.LessonId" class="btn btn-outline-primary">詳細</a> |
                <form method="post" asp-action="Delete" asp-controller="UserLessons">
                    <button type="submit" class="btn btn-outline-danger" name="id" value=@item.UserLessonId>一覧から削除</button>
                </form>
            </li>
        }
    </ul>    
}

<style>
    h4 {
        opacity: 0.4;
    }

    ul {
        list-style: none;
        display: flex;
        flex-direction: column;
        align-items: start;
    }
</style>