@model HelloQuery.Models.User

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">新規会員登録</h1>

<hr />
<form asp-action="Create" asp-controller="Users">
    <div class="text-center">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="UserName" class="control-label">ニックネーム</label>
            <p class="notion">※25文字以内で入力してください</p>
            <p><input asp-for="UserName" class=" text-center" /></p>
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <p><input asp-for="Email" class="text-center" /></p>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="control-label"></label>
            <p class="notion">※6文字以内で入力してください</p>
            <p><input asp-for="Password" class="text-center" /></p>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <!--パスワード再入力フォーム-->
        <div class="form-group">
            <label asp-for="ConfirmPassword" class="control-label"></label>
            <p><input asp-for="ConfirmPassword" class="text-center" /></p>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <br />

        <div class="text-center">
            <button type="submit" class="btn btn--cubic">作成</button>
        </div>
</form>

<br />

<div class="text-center">
    <a href=@Url.Action("Index","Home") class="btn btn--cubic">ホームに戻る</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    /*入力欄*/
    input {
        width: 370px;
        height: 30px;
    }

    .btn {
        width: 13rem;
        height: 2.7rem;
    }

    .notion{
        font-size: 10px;
        color: red;
    }
</style>