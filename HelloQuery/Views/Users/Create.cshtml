@model HelloQuery.Models.User

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">新規会員登録</h1>

<hr />
<form asp-action="Create">
		<div class="text-center">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="UserName" class="control-label">名前</label>
			    <p><input asp-for="UserName" class=" text-center" /></p>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
			    <p><input asp-for="Email" class="text-center" /></p>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <br />

            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
			    <p><input asp-for="Password" class="text-center" /></p>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <br />

        <div class="text-center">
            <a href="https://localhost:7208/Lessons" class="btn btn--cubic">作成</a>
        </div>
</form>

<br />

<div class="text-center">
    <a href="https://localhost:7208" class="btn btn--cubic">ホームに戻る</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    /*入力欄*/
    input{
        width: 370px;
        height: 30px;
    }

    .btn {
        width: 13rem;
        height: 2.7rem;
    }
</style>