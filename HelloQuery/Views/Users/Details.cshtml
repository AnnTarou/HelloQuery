@model HelloQuery.Models.User

@{
    Layout = "_LoggedInLayout";
    ViewData["Title"] = "Details";
}

<h1>アカウント情報</h1>

<div>
    <hr />
    <div class="text-center">

    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.UserName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.UserName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Password)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Password)
        </dd>
    </dl>
    </div>
</div>
<br />
<br />

<div class="text-center">
    <p><a asp-action="Edit" asp-route-id="@Model?.UserId" class="btn btn--cubic">編集</a></p>

	<p><a asp-action="Index" class="btn btn--cubic">戻る</a></p>
</div>


<style>
    a{
        color: white;
        text-decoration: none;
    }

    .row{
        line-height:3.0;
    }

    dt{
        font-size:23px;
    }

    .btn {
        width: 16rem;
        height: 2.7rem;
        color: white;
        background-color: #AA0000;
    }
</style>